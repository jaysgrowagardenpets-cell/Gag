rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "jaysgrowagardenpets@gmail.com";
    }
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own pet collections
    match /users/{userId}/pets/{petId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own orders
    match /users/{userId}/orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public pet catalog - read for all, write for admin only
    match /pets/{petId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Public pet categories - read for all, write for admin only
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin settings - admin only
    match /admin/{document} {
      allow read, write: if isAdmin();
    }
  }
}
